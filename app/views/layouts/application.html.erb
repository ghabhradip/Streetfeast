<body>
  <% if user_signed_in? %>
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <% if current_user.is_admin.nil? %>
      <a class="navbar-brand" href="/home/dashboard_user">NAVBAR</a>
      <div class="line"></div>
    <% else %>  
      <a class="navbar-brand" href="/home/dashboard">NAVBAR</a>
      <div class="line"></div>

    <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarColor02">
        <ul class="navbar-nav mr-auto"></ul>
        <ul class="navbar-nav">
          <li class="nav-item active">
            <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "nav-link") %>
          </li>
        </ul>
      </div>
    </nav>
    
    <div class="loader">
      <img src="/assets/source.gif" height="50">
    </div>

    <% if user_signed_in? %>
      <% if current_user.is_admin.eql? true %>
        <div class="sidenav">
          <a href="/home/dashboard" class="active home"><b>Home</b></a>
          <a href="/blogs" class="active blogs"><b>Blogs</b> <span class="badge badge-primary badge-pill"><%=Blog.all.count %></span></a>
          <a href="/restaurants" class="active restaurants"><b>Restaurants</b> <span class="badge badge-primary badge-pill"><%=Restaurant.all.count %></span></a>
          <a href="/support_tickets" class="active support_tickets"><b>Issues</b> <span class="badge badge-primary badge-pill"><%=SupportTicket.all.count %></span></a>
          <a href="/users" class="active users"><b>Users</b><span class="badge badge-primary badge-pill"><%=User.all.count %></span></a>
          <a href="/subscriptions" class="active subscriptions"><b>Subscription</b> <span class="badge badge-primary badge-pill"><%=Subscription.all.count %></span></a>
        </div>
        <div class="main">
          <% if notice %>
            <div class="alert alert-dismissible alert-info alert_admin">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong><%= notice %></strong>
            </div>
          <% end %>
          <% if alert %>
            <div class="alert alert-dismissible alert-warning">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong><%= alert %></strong>
           </div>
          <% end %>
          <%= yield %>
        </div>
      <% else %>
        <div style="margin-top:80px; padding: 10px;overflow-x: hidden;">
          <% if notice %>
            <div class="alert alert-dismissible alert-info">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong><%= notice %></strong>
            </div>
          <% end %>
          <% if alert %>
            <div class="alert alert-dismissible alert-warning">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong><%= alert %></strong>
           </div>
          <% end %>
          <%= yield %>
        </div>
      <% end %>
    <%end%>
  <% else %>



    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarColor02">
        <ul class="navbar-nav mr-auto"></ul>
        <ul class="navbar-nav">
          <li class="nav-item active">
            <%= link_to('Login', new_user_session_path, class: "nav-link")  %>
          </li>
          <li class="nav-item">
            <%= link_to('Register', new_user_registration_path, class: "nav-link")  %>
          </li>
        </ul>
      </div>
    </nav>
    <br>
      <div style="margin-top:40px;">
          <% if notice %>
            <div class="alert alert-dismissible alert-info">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong><%= notice %></strong>
            </div>
          <% end %>
          <% if alert %>
            <div class="alert alert-dismissible alert-warning">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong><%= alert %></strong>
           </div>
          <% end %>
          <%= yield %>
        </div>
  <% end %>




  <%= tinymce %>
</body>
<style type="text/css">
.alert-warning{
  color: red;
}
.alert{
      z-index: 9999;
    display: inline-block;
    position: fixed;
    right: 40px;
    top: 50px;
}
.loader {
  position: fixed;
  height: 100%;
  z-index: 99999;
  background: rgba(130, 126, 126, 0.5098039215686274);
  top: 0;
  width: 100%;
  display: none;
}
.loader img {
  left: 50%;
  position: fixed;
  top: 50%;
  margin: auto;
}
.sidenav {
    width: 195px;
    position:  fixed;
    top: 69px;
    background: #343a40;
    overflow-x: hidden;
    height:100%;
}
::-webkit-scrollbar {
  width: 7px;
  height: 7px;
}
::-webkit-scrollbar-button {
  width: 0px;
  height: 0px;
}
::-webkit-scrollbar-thumb {
  background: #636269;
  border: 0px none #ffffff;
  border-radius: 50px;
}
::-webkit-scrollbar-thumb:hover {
  background: #636269;
}
::-webkit-scrollbar-thumb:active {
  background: #636269;
}
::-webkit-scrollbar-track {
  background: #333238;
  border: 0px none #ffffff;
  border-radius: 50px;
}
::-webkit-scrollbar-track:hover {
  background: #333238;
}
::-webkit-scrollbar-track:active {
  background: #333238;
}
::-webkit-scrollbar-corner {
  background: transparent;
}

.sidenav a {
    padding: 6px 0px 6px 16px;
    text-decoration: none;
    font-size: 15px;
    color: white;
    display: block;
}

@media screen and (max-height: 450px) {
    .sidenav {padding-top: 1px;}
    .sidenav a {font-size: 18px;}
}
.main{
  padding: 70px 20px 0 195px;
}
.alert_admin{
  margin-top: 3px;
  margin-left:14px;
  margin-right:7px;
}
a{
  cursor: pointer;
  margin-top: 1px;
}
.sidenav a:hover{
  border-left: 5px solid #000;
  background-color: #1cd2b9; 
}
.on_click_active{
  background: #1cd2b9;
  border-left: 5px solid #000;
}
.line{
  border-left: 1px solid #0000002e;
  margin-left: 80px;
  height: 54px;
}

.navbar{
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 999;
}

</style>
<script>
  $( document ).ready(function() {
    $(".blogs_category").hide();
    
    var x = window.location.pathname;
    if(x=="/support_tickets"){
      $(".support_tickets").addClass("on_click_active");
    }
    else if(x=="/home/dashboard")
    {
      $(".home").addClass("on_click_active");
    }
    else if(x=="/restaurants")
    {
      $(".restaurants").addClass("on_click_active");
    }
    else if(x=="/blogs"){
      $(".blogs").addClass("on_click_active");
    }
    else if(x=="/users")
    {
     $(".users").addClass("on_click_active"); 
    }
    else if(x=="/subscriptions")
    {
      $(".subscriptions").addClass("on_click_active"); 
    }
  });
  function blogs_category(){
    $(".blogs_category").slideToggle();
  }

</script>
</html>
