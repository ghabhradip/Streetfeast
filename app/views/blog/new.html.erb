<script type="text/javascript" src="/assets/bootstrap-filestyle.js"> </script>
<div style="padding: 20px;">
  <div class="card new_blog_card" style="padding: 10px;">
    <div class="container-fluid">
      <div class ="new_blog">
        <h3>Create a new blog</h3>
        <%= form_for (@blog),url: "/blog/create_blog_user", :html => { :multipart => true } do |f| %>
          <div class="field">
            <%= f.text_field :title,:class=>"form-control",:placeholder => "Title" %>
          </div>
          <br>

          <div class="field">
            <%= f.text_area :content, :class => "tinymce",:placeholder => "Content" %>
          </div>
          <br>
          <div class="field">
            <%= f.fields_for @picture do |a|  %>
              <b> Upload Images : </b>
              <%= a.file_field :avatar , :class =>'', multiple: true %>
            <% end %>
          </div>
          <br/>
          <div class="actions">
            <button type="submit" class="medium_button" >Create</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $(":file").filestyle({classButton: "btn btn-default file_button"});

</script>