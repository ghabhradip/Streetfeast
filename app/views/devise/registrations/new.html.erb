<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<center>
<div class="card bg-light mb-3 register_card">
  <div class="card-header"><h2>Register</h2></div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
      <fieldset>
        <div class="form-group">
          <%= f.text_field :fullname, autofocus: true, class: 'form-control', placeholder: "Fullname"%>
        </div><br>

    
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Enter email"%>
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Choose Password" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Re-type Password" %>
        </div><br>

       
        <button type="submit" class="medium_button">Register</button>
        </fieldset>
        <br>
        <br>
        <button class="loginBtn loginBtn--facebook">Login with Facebook</button>
        <%= link_to "Login with Google", user_omniauth_authorize_path(:google_oauth2), class: "loginBtn loginBtn--google" %>
    <%end%>
  </div>
</div>
</center>


<script>
  $( function() {
    var availableTags = ["Mumbai","Delhi","Bangalore","Hyderabad","Ahmedabad","Chennai","Kolkata","Surat","Pune","Jaipur","Lucknow","Kanpur","Nagpur","Visakhapatnam","Indore"];
   
    $( "#city" ).autocomplete({
      source: availableTags
    });
  } );
  </script>


